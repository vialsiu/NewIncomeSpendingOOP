<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.oopjavafxuserdetailsdao.GUIAppMain">

    <Text text="Expense Management System" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtTitle" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtCategory" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtAmount" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <DatePicker fx:id="dpDate" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add Expense" onAction="#handleAddExpense"/>
        <Button text="Delete Selected" onAction="#handleDeleteExpense"/>
        <Button text="Refresh List" onAction="#handleRefresh"/>
    </HBox>

    <TableView fx:id="tblExpenses" prefHeight="200">
        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="50"/>
            <TableColumn text="Title" fx:id="colTitle" prefWidth="150"/>
            <TableColumn text="Category" fx:id="colCategory" prefWidth="100"/>
            <TableColumn text="Amount" fx:id="colAmount" prefWidth="100"/>
            <TableColumn text="Date" fx:id="colDate" prefWidth="100"/>
        </columns>
    </TableView>

    <TextArea fx:id="txtMessages" prefHeight="60" editable="false"/>

    <padding><Insets topRightBottomLeft="10"/></padding>
</VBox>